<h1>Listing coisas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coisas.each do |coisa| %>
  <tr>
    <td><%= coisa.nome %></td>
    <td><%= coisa.descricao %></td>
    <td><%= coisa.tags %></td>
    <td><%= link_to 'Show', coisa %></td>
    <td><%= link_to 'Edit', edit_coisa_path(coisa) %></td>
    <td><%= link_to 'Destroy', coisa, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

